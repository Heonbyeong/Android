<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/addToAllButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/arrow_size"
                    android:drawablePadding="5dp"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/notosanskrregular"
                    android:paddingLeft="3dp"
                    android:text="All Routes"
                    android:textAllCaps="false"
                    android:textColor="#007AFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/AddRouteText"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fontFamily="@font/notosanskrbold"
                    android:paddingLeft="46dp"
                    android:text="Add Route"
                    android:textColor="#000000"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="88dp"
                android:fontFamily="@font/notosanskrbold"
                android:text="날짜"
                android:textColor="#000000"
                android:textSize="25sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/yearEdit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="44dp"
                android:background="@null"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toEndOf="@+id/dateText"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                android:singleLine="true"
                android:maxLength="4"/>

            <View
                android:id="@+id/view"
                android:layout_width="70dp"
                android:layout_height="2px"
                android:layout_marginTop="68dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toEndOf="@+id/dateText"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


            <View
                android:id="@+id/view5"
                android:layout_width="27dp"
                android:layout_height="2px"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="59dp"
                android:background="#000000"
                app:layout_constraintEnd_toStartOf="@+id/monthEdit"
                app:layout_constraintStart_toEndOf="@+id/yearEdit"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <EditText
                android:id="@+id/monthEdit"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:gravity="center_horizontal"
                android:maxLength="2"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.177"
                app:layout_constraintStart_toEndOf="@+id/yearEdit"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <View
                android:id="@+id/view2"
                android:layout_width="35dp"
